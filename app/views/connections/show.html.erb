<div class="container">
  <div>
    <%= link_to connections_path, class: "nav-link m-0 px-0 py-3" do %>
      <i class="fas fa-long-arrow-alt-left"> Back to your buddies</i>
    <% end %>
  </div>
  <div class="card">
    <div class="d-flex flex-column align-items-center">
      <%= cl_image_tag @buddy.photo, class: "round-img my-3" %>
      <h3 class="card-dashboard"><%= @buddy.first_name %> <%= @buddy.last_name %></h3>
    </div>
    <div class="card-body my-0 py-0">
      <hr class="my-0">
    </div>
    <div class="card-body py-2">
      <div class="card-item d-flex justify-content-between my-3 px-1">
        <h5 class="m-0 p-0">Age</h5>
        <p class="m-0 p-0"><%= @buddy.age %></p>
      </div>
      <div class="card-item d-flex justify-content-between my-3 px-1">
        <h5 class="m-0 p-0">Gender</h5>
        <p class="m-0 p-0"><%= @buddy.gender %></p>
      </div>
      <div class="card-item d-flex justify-content-between my-3 px-1">
        <h5 class="m-0 p-0">Address</h5>
        <p class="m-0 p-0"><%= @buddy.address %></p>
      </div>
      <div class="card-item d-flex justify-content-between my-3 px-1">
        <h5 class="m-0 p-0">City</h5>
        <p class="m-0 p-0"><%= @buddy.city %></p>
      </div>
      <div class="card-item d-flex justify-content-between my-3 px-1">
        <h5 class="m-0 p-0">Country</h5>
        <p class="m-0 p-0"><%= @buddy.country %></p>
      </div>
    </div>
    <div class="card-body my-0 py-0">
      <hr class="my-0">
    </div>
    <div class="card-body py-2">
     <% @questions.each do |question| %>
      <% unless question.id == 9 %>
        <div class="question mt-3 mb-3">
          <h5 class="px-1 m-0"><%= question.description %></h5>
          <div class="pt-2">
            <% responses = question.responses.map do |response| %>
              <% response.answer %>
            <% end %>
            <% overlap = responses & @buddy_user_responses %>
            <% overlap.each do |i| %>
              <% if @current_user_responses.include?(i) %>
                <button class="btn btn-primary btn-sm round mb-0 mr-1 p-2"><%= i %></button>
              <% else %>
                <button class="btn btn-outline-primary btn-sm round mb-0 mr-1 p-2"><%= i %></button>
              <% end %>
            <% end %>
          </div>
        </div>
       <% end %>
      <% end %>
    </div>
    <div class="card-body my-0 py-0">
      <hr class="my-0">
    </div>
    <div class="d-flex justify-content-center m-0 p-3">
      <%= link_to "Messages", connection_messages_path(@connection), class: "bu-brand-button bu-button-lg" %>
    </div>
  </div>
</div>
