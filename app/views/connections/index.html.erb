<div class="container">
  <h2 class="my-5">Your top buddies in <strong>Barcelona</strong></h2>
  <% @connections.each do |c| %>
    <%= link_to root_path do %>
    <div class="card-buddy">
      <%= cl_image_tag c.receiver.photo, class: "avatar-medium" %>
      <div class="card-buddy-infos">
        <h3><%= c.receiver.first_name %></h3>
        <p><%= c.receiver.intro %></p>
      </div>
      <div class="card-buddy-score">
        <h6><%= c.score %>%</h6>
        <p>MATCH</p>
      </div>
    </div>
    <% end %>
  <% end %>
</div>



