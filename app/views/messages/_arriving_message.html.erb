<div align="left" class="d-flex align-items-center my-3">
  <%= cl_image_tag message.user.photo, class: "avatar mr-1" %>
  <div class="message-bubles text-left bg-info my-0 px-3 py-2" style="margin-right: 30vw; word-wrap: break-word; display: block; width: 70vw;">
    <p class="m-0"><%= message.content %></p>
    <div class="d-flex justify-content-end">
      <p class="m-0" style="font-size: 10px;"><%= message.created_at.localtime.strftime("%a, %H:%M") %></p>
    </div>
  </div>
</div>
