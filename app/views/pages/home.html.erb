<div>
    <div class="d-flex flex-column justify-content-between home-body">
      <div>
        <h1 class="mx-2 mt-3  home-tagline">Find a <span class="font-weight-bold mr-2">buddy</span> <br>Rock <span class="font-weight-bold">together</span>!</h1>
        <%= image_tag "friends_banner.jpg", class: "home-banner banner-sm mx-0" %>
      </div>
      <% if user_signed_in? %>
        <% if current_user.in_session? %>
          <%= link_to "See results", connections_path, class:"bu-brand-button" %>
        <% else %>
        <form novalidate="novalidate" class="simple_form search mx-2 home-search" action="/connections/search" accept-charset="UTF-8" method="get"><input name="utf8" type="hidden" value="&#x2713;" />
          <div class="search-form-control form-group">
            <input class="form-control form-search string required" type="text" name="search[query]" placeholder="Enter location..." aria-label="Search"/>
            <button name="button" type="submit" class="bu-brand-button-sm bu-button-search mt-3 float-right">
              <i class="fas fa-search"></i> Search
            </button>
          </div>
        </form>
        <% end %>
      <% else %>
        <div class="mx-2">
          <%= link_to "Log in", new_user_session_path, class: "bu-brand-button-outline" %>
          <%= link_to "Register now", dashboard_profile_edit_path, class: "bu-brand-button" %>
        </div>
      <% end %>
    </div>
</div>
