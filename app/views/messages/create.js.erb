function refreshForm(innerHTML) {
  var newReviewForm = document.getElementById('new_message');
  newReviewForm.innerHTML = innerHTML;
}

function addMessage(messageHTML) {
  var messages = document.getElementById('messages');
  messages.insertAdjacentHTML('beforeend', messageHTML);
  messages.scrollIntoView(false)
}

<% if @message.errors.any? %>
  refreshForm('<%= j render "messages/form", connection: @connection, message: @message %>');
<% else %>
  addMessage('<%= j render "messages/show", message: @message %>');
  refreshForm('<%= j render "messages/form", connection: @connection, message: Message.new %>');
<% end %>


