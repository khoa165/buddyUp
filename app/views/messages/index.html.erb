<div class="mb-2 container py-3" style="">
  <div class="" id="messages" style="">
    <% @messages.each do |message| %>
      <% if message.user == current_user %>
      <%= render 'messages/show', message: message %>
      <% else%>
      <p class="text-left bg-primary p-2 text-white" style="margin-left: 30vw;"><%= message.content %></p>
      <% end %>
    <% end %>
  </div>
  <div class="">
    <%= render 'messages/form', connection: @connection, message: @message %>
  </div>
</div>
