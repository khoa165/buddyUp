<%= simple_form_for :user_responses, url: user_responses_path, method: :post do |f| %>
  <% @questions.each do |question| %>
    <h1><%= question.description %></h1>

    <%= f.collection_check_boxes :response_ids, question.responses, :id, :answer, item_label_class: "btn btn-outline-primary rounded checkbox-button" %>
  <% end %>
  <%= f.submit %>
<% end %>


